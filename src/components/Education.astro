---
import {resumeData} from '../data/resumeData';
import type {ResumeData} from '../types/resume.d';

const lang = Astro.props.lang || 'en';
const education = resumeData.content[lang as keyof ResumeData['content']].education;
---

<section class='py-6 animate-fade-in'>
    <h2 class='text-2xl font-semibold mb-4'>{lang === 'en' ? 'Education' : '教育背景'}</h2>
    <div class='space-y-4'>
        {
            education.map((edu) => (
                <div class='bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md hover:shadow-lg hover:border-accent transition-all duration-300'>
                    <div class='flex justify-between items-start'>
                        <div>
                            <h3 class='text-xl font-semibold'>{edu.degree}</h3>
                            <p class='text-accent text-sm'>{edu.school}</p>
                        </div>
                        <p class='text-sm text-gray-500 dark:text-gray-400'>{edu.period}</p>
                    </div>
                </div>
            ))
        }
    </div>
</section>
