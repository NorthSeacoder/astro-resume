---
import {resumeData} from '../data/resumeData';
import type {ResumeData} from '../types/resume.d';
const lang = Astro.props.lang || 'en';
const {email, phone, linkedin} = resumeData.content[lang as keyof ResumeData['content']].contact;
---

<section class='py-6 animate-fade-in'>
    <h2 class='text-2xl font-semibold mb-4'>{lang === 'en' ? 'Contact' : '联系方式'}</h2>
    <ul class='space-y-3'>
        <li><i class='fa-solid fa-envelope mr-2'></i>{email}</li>
        <li><i class='fa-solid fa-phone mr-2'></i>{phone}</li>
        <li><i class='fa-brands fa-linkedin mr-2'></i>{linkedin}</li>
    </ul>
</section>
